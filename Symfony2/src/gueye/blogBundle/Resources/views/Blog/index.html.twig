{% extends "gueyeblogBundle::layout.html.twig" %}
{% block title %} Accueil - {{ parent() }}
{% endblock %}
{% block gueyeblog_body %}
	<div>
		{% for article in articles %}
			{# On inclut la vue à chaque itération dans la boucle #}
			{% include "gueyeblogBundle:Blog:article.html.twig" with {'accueil': true} %}
			<hr />
		{% else %}
			<p>Pas (encore !) d'articles</p>
		{% endfor %}
	</div>
	<div class="pagination text-center">
		<ul>
		{# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
		{% for p in range(1, nombrePage) %}
			<li{% if p == page %} class="active"{% endif %}>
			<a href="{{ path('gueyeblog_Accueil', {'page': p}) }}">{{ p }}</a>
			</li>
		{% endfor %}
		</ul>
	</div>
{% endblock %}