{# src/gueye/blogBundle/Resources/views/Blog/supprimer.html.twig #}
{% extends "gueyeblogBundle::layout.html.twig" %}
{% block title %}
Supprimer un article - {{ parent() }}
{% endblock %}
{% block gueyeblog_body %}
<h2>Supprimer un article</h2>
<p>
Etes-vous certain de vouloir supprimer l'article "{{ article.titre }}" ?
</p>
{# On met l'id de l'article dans la route de l'action du formulaire #}
<form action="{{ path('gueyeblog_supprimer', {'slug': article.slug}) }}" method="post">
<a href="{{ path('gueyeblog_voir', {'slug': article.slug}) }}"
class="btn"><i class="icon-chevron-left"></i>
Retour Ã  l'article
</a>
<input type="submit" value="Supprimer" class="btn btn-danger" />
{{ form_rest(form) }}
</form>
{% endblock %}